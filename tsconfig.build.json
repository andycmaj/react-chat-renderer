{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outFile": "dist/index.d.ts",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "exclude": ["src/__tests__"],
  "include": ["src", "@types"]
}
